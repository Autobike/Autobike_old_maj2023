{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MyRIO: CMake Generate Build Files",
            "type": "shell",
            "command": "cmake -G Ninja ${workspaceFolder}/myrio/c",
            "options": {
                "cwd": "${workspaceFolder}/myrio/c"
            },
            "problemMatcher": []
        },
        {
            "label": "MyRIO: Ninja",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/myrio/c"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "MyRIO: Upload",
            "type": "shell",
            "command": ".\\upload-to-myrio.cmd",
            "options": {
                "cwd": "${workspaceFolder}/myrio/c"
            },
            "problemMatcher": []
        }
    ]
}
